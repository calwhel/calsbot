modules = ["python-3.11", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_openai_ai_integrations:1.0.0", "python_gemini_ai_integrations:1.0.0", "python_anthropic_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "cargo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "lcms2", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "qhull", "rustc", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Check"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Trade Tracker"

[[workflows.workflow]]
name = "Dev Check"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"âœ… Development environment ready. Production bot runs on Railway.\" && sleep infinity"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Trade Tracker"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 tracker_server.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["bash", "start.sh"]
